{% extends 'base.html.twig' %}

{% block title %}Vehicles{% endblock %}

{% block body %}
    <h1>Vehicles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Available_from</th>
                <td>{{ vehicle.availableFrom ? vehicle.availableFrom|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Available_until</th>
                <td>{{ vehicle.availableUntil ? vehicle.availableUntil|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Create_date</th>
                <td>{{ vehicle.createDate ? vehicle.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicles_index') }}">back to list</a>

    <a href="{{ path('vehicles_edit', {'id': vehicle.id}) }}">edit</a>

    {{ include('vehicles/_delete_form.html.twig') }}
{% endblock %}
