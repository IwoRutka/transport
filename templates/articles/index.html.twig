{% extends 'base.html.twig' %}

{% block title %}Aktualności{% endblock %}

{% block body %}
  <h1>Aktualności</h1>

  {% for article in articles %}

    <div class="row">
      <h3>{{ article.title }}</h3>
    </div>
    <div class="row">
      <div class="col-5">
        <img src="{{ asset('upload/img/' ~ article.image)  }}"/>
      </div>
      <div class="col-6">
        <p>{{ article.description }}</p><br>
        <p class="dataautor">{{ article.createDate ? article.createDate|date('Y-m-d') : '' }}
          {{ article.addedBy }}</p>
      </div>
      <br>
    </div>
    <div class="row">
      <br>
      <div class="article-footer">
        <br>
      </div>
    </div>

  {% else %}
    <div>
      <h4 colspan="6">no articles found</h4>
    </div>
  {% endfor %}

{% endblock %}
