{% extends 'base.html.twig' %}

{% block title %}Aktualności{% endblock %}

{% block body %}

  <h3>Aktualności</h3><br>

  {% for article in articles %}

    <div class="row article-box">
      <div class="article-img col-lg-4">
        <img src="{{ asset('upload/img/' ~ article.image)  }}"/>
      </div>
      <div class="col-lg-7">
        <div class="article-title">
        <h4>{{ article.title }}</h4>
        <br>
      </div>
      <div class="article-description">
        <p>{{ article.description }}</p><br>
        <p class="dataautor">{{ article.createDate ? article.createDate|date('Y-m-d') : '' }}
          {{ article.addedBy }}</p>
      </div>
      </div>
      <br>
    </div>
    <div class="row">
      <br>
      <div class="article-footer">
        <br>
      </div>
    </div>

  {% else %}
    <div>
      <h4 colspan="6">no articles found</h4>
    </div>
  {% endfor %}

{% endblock %}
