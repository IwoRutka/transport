{% extends 'base.html.twig' %}

{% block title %}Contractor index{% endblock %}

{% block body %}
    <h1>Contractor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>Zip_code</th>
                <th>City</th>
                <th>Street</th>
                <th>Number</th>
                <th>Tax_id</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contractor in contractors %}
            <tr>
                <td>{{ contractor.id }}</td>
                <td>{{ contractor.name }}</td>
                <td>{{ contractor.country }}</td>
                <td>{{ contractor.zipCode }}</td>
                <td>{{ contractor.city }}</td>
                <td>{{ contractor.street }}</td>
                <td>{{ contractor.number }}</td>
                <td>{{ contractor.taxId }}</td>
                <td>{{ contractor.telephone }}</td>
                <td>{{ contractor.email }}</td>
                <td>
                    <a href="{{ path('contractor_show', {'id': contractor.id}) }}">show</a>
                    <a href="{{ path('contractor_edit', {'id': contractor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contractor_new') }}">Create new</a>
{% endblock %}
